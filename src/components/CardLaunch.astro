---
interface Props {
  id: string;
  name: string;
  img: string;
  success: boolean;
  flightNumber: number;
  details: string | null;
}

const { success, id, name, img, flightNumber, details } = Astro.props;
const sucessText = success ? "Success" : "Failiur";
---

<a
  href={`/launch/${id}`}
  class="rounded-lg border shadow-md bg-gray-800 border-t-gray-700
hover:scale-105 hover:bg-gray-700 hover:border-gray-500 transition flex flex-col p-10"
>
  <picture class="flex justify-center p-4">
    <img class="mb-5 rounded-lg" src={img} alt={`Patch for launch ${id}`} />
  </picture>

  <header class="p-4 flex-grow">
    <span class:list={[
        "text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
        {
            "bg-green-400 text-green-900":success,
            "bg-red-600 text-red-900": !success
        }
    ]}>
        {sucessText}
    </span>
    <!-- <span class={`
    ${success ? 'bg-green-400 text-green-900' : 'bg-red-600 text-red-900'} text-xs font-semibold
    mr-2 px-2.5 py-0.5 rounded`}>
    {sucessText}

    </span> -->
  </header>

  <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
    Fligth #{flightNumber}
  </h2>

  <p class="mb-4 font-light text-gray-400">
    {details != null && details?.length > 100 ? details.slice(0, 100) + "..." : details}
  </p>
</a>

